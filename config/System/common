# config/common - common options for lingmo-system-build(7)

# Version of lingmo-system-build used to build config (config format version)
LINGMO_SYS_BUILD_CONFIGURATION_VERSION="20240227-lingmo"

# Set package manager
LINGMO_SYS_BUILD_APT="apt"

# Set proxy for HTTP connections
LINGMO_SYS_BUILD_APT_HTTP_PROXY=""

# Set apt/aptitude pipeline depth
LINGMO_SYS_BUILD_APT_PIPELINE=""

# Set apt/aptitude recommends
LINGMO_SYS_BUILD_APT_RECOMMENDS="true"

# Set apt/aptitude security
LINGMO_SYS_BUILD_APT_SECURE="true"

# Set apt/aptitude source entries in sources.list
LINGMO_SYS_BUILD_APT_SOURCE_ARCHIVES="true"

# Control cache
LINGMO_SYS_BUILD_CACHE="true"

# Control if downloaded package indices should be cached
LINGMO_SYS_BUILD_CACHE_INDICES="false"

# Control if downloaded packages files should be cached
LINGMO_SYS_BUILD_CACHE_PACKAGES="false"

# Control if completed stages should be cached
LINGMO_SYS_BUILD_CACHE_STAGES="bootstrap"

# Set debconf(1) frontend to use
LINGMO_SYS_BUILD_DEBCONF_FRONTEND="noninteractive"

# Set debconf(1) priority to use
LINGMO_SYS_BUILD_DEBCONF_PRIORITY="critical"

# Set initramfs hook
LINGMO_SYS_BUILD_INITRAMFS="live-boot"

# Set initramfs compression
LINGMO_SYS_BUILD_INITRAMFS_COMPRESSION="gzip"

# Set init system
LINGMO_SYS_BUILD_INITSYSTEM="systemd"

# Set distribution mode
LINGMO_SYS_BUILD_MODE="debian"

# Set system type
LINGMO_SYS_BUILD_SYSTEM="live"

# Set base name of the image
LINGMO_SYS_BUILD_IMAGE_NAME="LingmoOS"

# Set options to use with apt
APT_OPTIONS="--yes -o Acquire::Retries=5"

# Set options to use with aptitude
APTITUDE_OPTIONS="--assume-yes -o Acquire::Retries=5"

# Set options to use with debootstrap
DEBOOTSTRAP_OPTIONS=""

# Set script to use with debootstrap
DEBOOTSTRAP_SCRIPT=""

# Set options to use with gzip
GZIP_OPTIONS="-6 --rsyncable"

# Enable UTC timestamps
LINGMO_SYS_BUILD_UTC_TIME="false"

# lingmo-system-build options

# Enable breakpoints
# If set here, overrides the command line option
#_BREAKPOINTS="false"

# Enable debug
# If set here, overrides the command line option
#_DEBUG="false"

# Enable color
# If set here, overrides the command line option
#_COLOR="true"

# Enable force
# If set here, overrides the command line option
#_FORCE="false"

# Enable quiet
# If set here, overrides the command line option
#_QUIET="false"

# Enable verbose
# If set here, overrides the command line option
#_VERBOSE="false"
