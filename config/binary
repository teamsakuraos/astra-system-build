# config/binary - options for lingmo-system-build(7), binary stage

# Set image type
LINGMO_SYS_BUILD_IMAGE_TYPE="iso-hybrid"
# iso-hybrid

# Set image filesystem
LINGMO_SYS_BUILD_BINARY_FILESYSTEM="ext4"

# Set apt/aptitude generic indices
LINGMO_SYS_BUILD_APT_INDICES="true"

# Set boot parameters
LINGMO_SYS_BUILD_BOOTAPPEND_LIVE="boot=live username=lingmo noautologin quiet splash"

# Set boot parameters
LINGMO_SYS_BUILD_BOOTAPPEND_INSTALL=""

# Set boot parameters
LINGMO_SYS_BUILD_BOOTAPPEND_LIVE_FAILSAFE="boot=live components memtest noapic noapm nodma nomce nolapic nosmp nosplash vga=788"

# Set BIOS bootloader
LINGMO_SYS_BUILD_BOOTLOADER_BIOS="syslinux"

# Set EFI bootloader
LINGMO_SYS_BUILD_BOOTLOADER_EFI="grub-efi"

# Set bootloaders
LINGMO_SYS_BUILD_BOOTLOADERS=""

# Set checksums
LINGMO_SYS_BUILD_CHECKSUMS="md5"

# Set compression
LINGMO_SYS_BUILD_COMPRESSION="none"

# Support dm-verity on rootfs
LINGMO_SYS_BUILD_DM_VERITY=""

# Support FEC on dm-verity rootfs
LINGMO_SYS_BUILD_DM_VERITY_FEC_ROOTS=""

# Set sign script for roothash for dm-verity rootfs
LINGMO_SYS_BUILD_DM_VERITY_SIGN=""

# Set zsync
LINGMO_SYS_BUILD_ZSYNC="true"

# Control if we build binary images rootfsed
# NEVER, *EVER*, *E*V*E*R* SET THIS OPTION to false.
LINGMO_SYS_BUILD_BUILD_WITH_CHROOT="true"

# Set debian-installer
LINGMO_SYS_BUILD_DEBIAN_INSTALLER="live"

# Set debian-installer suite
LINGMO_SYS_BUILD_DEBIAN_INSTALLER_DISTRIBUTION="polaris"

# Set debian-installer preseed filename/url
LINGMO_SYS_BUILD_DEBIAN_INSTALLER_PRESEEDFILE=""

# Toggle use of GUI debian-installer
LINGMO_SYS_BUILD_DEBIAN_INSTALLER_GUI="true"

# Set hdd label
LINGMO_SYS_BUILD_HDD_LABEL="DEBIAN_LIVE"

# Set hdd filesystem size
LINGMO_SYS_BUILD_HDD_SIZE="auto"

# Set start of partition for the hdd target for BIOSes that expect a specific boot partition start (e.g. "63s"). If empty, use optimal layout.
LINGMO_SYS_BUILD_HDD_PARTITION_START=""

# Set iso author
LINGMO_SYS_BUILD_ISO_APPLICATION="LingmoOS"

# Set iso preparer
LINGMO_SYS_BUILD_ISO_PREPARER="Lingmo OS LingmoSystemBuild2.0; https://github.com/LingmoOS/lingmo-system-build.git"

# Set iso publisher
LINGMO_SYS_BUILD_ISO_PUBLISHER="LingmoOS Project"

# Set iso volume (max 32 chars)
LINGMO_SYS_BUILD_ISO_VOLUME="Lingmo OS Live"

# Set jffs2 eraseblock size
LINGMO_SYS_BUILD_JFFS2_ERASEBLOCK=""

# Set memtest
LINGMO_SYS_BUILD_MEMTEST="memtest86+"

# Set loadlin
LINGMO_SYS_BUILD_LOADLIN="true"

# Set win32-loader
LINGMO_SYS_BUILD_WIN32_LOADER="true"

# Set net tarball
LINGMO_SYS_BUILD_NET_TARBALL="true"

# Set onie
LINGMO_SYS_BUILD_ONIE="false"

# Set onie additional kernel cmdline options
LINGMO_SYS_BUILD_ONIE_KERNEL_CMDLINE=""

# Set inclusion of firmware packages in debian-installer
LINGMO_SYS_BUILD_FIRMWARE_BINARY="true"

# Set inclusion of firmware packages in the live image
LINGMO_SYS_BUILD_FIRMWARE_CHROOT="true"

# Set swap file path
LINGMO_SYS_BUILD_SWAP_FILE_PATH=""

# Set swap file size
LINGMO_SYS_BUILD_SWAP_FILE_SIZE="512"

# Enable/disable UEFI secure boot support
LINGMO_SYS_BUILD_UEFI_SECURE_BOOT="enable"
